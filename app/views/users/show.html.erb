<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'books/list', book: @book %>
 		</div>
    	<div class="col-xs-9">
	    	<h2>Books</h2>
	    	<table class="table table-striped">
		    	<tr>
		    		<th></th>
		    		<th>Title</th>
		    		<th>Opinion</th>
		    	</tr>
	    		<% @books.each do |book| %>
	    		<tr>
		    		<td class="img">
		    			<%= link_to user_path(book.user) do %>
		    			<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %>
		    			<% end %>
		    		</td>
		    		<td>
		    			<%= link_to book_path(book.id) do %>
		    			<%= book.title %>
		    			<% end %>
		    		</td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
<%= render 'users/list' %>
