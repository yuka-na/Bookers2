<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'books/list', book: @book %>
 		</div>
	    <div class="col-xs-9">
	    	<h2>Users</h2>
	    	<table class="table table-striped">
	    	<tr>
	    		<th>image</th>
	    		<th>name</th>
	    		<th></th>
	    	</tr>
	    	<% @users.each do |user| %>
		    	<tr>
		    		<td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: '40x40' %></td>
					<td><%= user.name %></td>
					<td><%= link_to "show", user_path(user.id),class: "show_#{user.id}" %></td>
				</tr>
			<% end %>
			</table>
		</div>
	</div>
</div>
<%= render 'users/list' %>