<% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this obj from being saved:
    <% @book.errors.full_messages.each do |message| %>
        <%= message %><br>
    <% end %>
<% end %>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing book</h1>
			<div class="field row">
				<p class="foot">Title</p>
				<%= form_for(@book) do |f| %>
					<%= f.text_field :title, autofocus: true, class: "col-xs-12 book_title" %>
					<br><br>
					<p class="foot">Opinion</p>
					<%= f.text_area :body, autofocus: true, class: "col-xs-12 book_body" %>
					<br><br><br>
					<%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
				<% end %>
			</div>
			<h5><%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %></h5>
		</div>
	</div>
</div>
<%= render 'users/list' %>