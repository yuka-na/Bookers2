<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'books/list', book: @book %>
	 	</div>
	    <div class="col-xs-9">
	    	<h2>Book detail</h2>
	    	<table class="table table-striped">
		    	<tr>
		    		<td>
		    			<%= link_to user_path(@book.user) do %>
			    			<%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %>
			    			<%= @book.user.name %>
		    			<% end %>
		    		</td>
					<td>
						<%= link_to book_path(@book) do %>
							<%= @book.title %>
						<% end %>
					</td>
					<td><%= @book.body %></td>
					<td><%= link_to "edit", edit_book_path(@book), class:"btn-sm btn-success"  %></td>
					<td>
						<%= link_to  book_path(@book), method: :delete do %>
							<a data-confirm="本当に消しますか？" class="btn-sm btn-danger" rel="nofollow">Destroy</a>
						<% end %>
					</td>
				</tr>
			</table>
		</div>
	</div>
</div>
<%= render 'users/list' %>