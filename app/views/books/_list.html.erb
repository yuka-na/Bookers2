<h2>User info</h2>
			<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>name</th>
						<th><%= current_user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= current_user.introduction %></th>
					</tr>
				</thead>
			</table>
			<%= link_to "",edit_user_path(current_user) ,class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %><br><br>
			<%= form_for(book, url: books_path) do |f| %>
				<h2>New book</h2>
				<p>Title</p>
				<%= f.text_field :title, class:"form-control", placeholder:"" %>
				<p>Opinion</p>
				<%= f.text_area :body, class:"form-control", placeholder:"" %><br>
				<%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
	     	<% end %>